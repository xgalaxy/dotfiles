#
# First, setup paths
#

path=(
	$path
	$HOME/.rvm/bin
)
fpath=(
	$fpath
	$HOME/.zsh/themes
)


#
# Second, source Prezto's zshrc
#

if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/runcoms/zshrc" ]]; then
	source "${ZDOTDIR:-$HOME}/.zprezto/runcoms/zshrc"
fi


#
# Third, any custom stuff
#

# Load RVM into a shell session *as a function*
if [[ -s "$HOME/.rvm/scripts/rvm" ]]; then
	source "$HOME/.rvm/scripts/rvm"
fi

export PYTHONPATH='/usr/local/lib/python2.7/site-packages:$PYTHONPATH'
export EDITOR='vim'
export VISUAL='vim'
export MAVEN_OPTS='-Dfile.encoding=UTF-8 -XX:MaxPermSize=2048M -Xmx2048M'

# Turn off auto completion of hosts
zstyle ':completion:*' hosts off

# Speed up git completion because its crap slow
__git_files () {
	_wanted files expl 'local files' _files
}
